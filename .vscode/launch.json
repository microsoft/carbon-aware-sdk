{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/dotnet/CarbonAware.WebApi/bin/Debug/net6.0/CarbonAware.WebApi.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/dotnet/CarbonAware.WebApi/",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "CarbonAwareVars__CarbonIntensityDataSource": "Watttime",
        "CarbonAwareVars__UseWebProxy": "true",
        "CarbonAwareVars__WebProxyUrl": "http://myproxy.com:8080",
        "CarbonAwareVars__WebProxyUsername": "testU",
        "CarbonAwareVars__WebProxyPassword": "testP",
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },

    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }

  ]
}
